# CERES Simplified - Environment Variables Example
# Copy this file to .env and adjust the values as needed

# Django Settings
SECRET_KEY=django-insecure-ceres-simple-dev-key-change-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Database Settings
USE_SQLITE=True
# If USE_SQLITE=False, configure PostgreSQL below:
DB_NAME=ceres_simple
DB_USER=ceres
DB_PASSWORD=your_password_here
DB_HOST=localhost
DB_PORT=5432

# CERES Specific Settings
CERES_ENVIRONMENT=development

